.our-services
	margin-bottom 50px
	
	.our-services__title
		font-size 72px
		margin-bottom 130px
		color #686868
		text-align center
		
	.our-services__cards
		display flex
		flex-direction row
		justify-content space-around
		width 1230px
		height 270px
		margin 0 auto
		
		.our-services__card
			width 371px
			position relative
			
		.our-services__card:nth-of-type(1):before
			position absolute
			top 50px
			left 160px
			width 42px
			height 41px
			background url("../image/restaurant.png")
			
		.our-services__card:nth-of-type(2):before
			position absolute
			top 50px
			left 160px
			width 48px
			height 49px
			background url("../image/sports-club.png")
			
		.our-services__card:nth-of-type(3):before
			position absolute
			top 50px
			left 160px
			width 60px
			height 32px
			background url("../image/pick-up.png")
			
		.our-services__card-title
			margin-top 100px
			margin-bottom 28px
			font-size 30px
			font-family "GildaDisplay"
			color #686868
			text-align center
			

		.our-services__card-description
			font-size 16px
			line-height 30px
			color #7d7d7d
			text-align center
			font-family "Open Sans"
			font-weight 300
			
